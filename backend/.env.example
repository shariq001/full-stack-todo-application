# =============================================================================
# FastAPI Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# These settings should match the root .env file
#

# Database Connection String for PostgreSQL
# Get this from:
# - Neon: https://console.neon.tech/ (copy Connection String)
# - Local: postgresql://postgres:password@localhost:5432/todo_app
# - Railway/Other: Follow their setup guide
DATABASE_URL="postgresql://user:password@localhost:5432/todo_app"

# JWT Secret Key (must be at least 32 characters)
# Generate with: openssl rand -hex 32
# IMPORTANT: Keep this secret and never commit it!
BETTER_AUTH_SECRET="your_random_secret_key_minimum_32_characters_long"

# Better Auth Frontend URL (where your Next.js app runs)
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# Application Environment (development, production, testing)
ENVIRONMENT="development"

# Debug Mode (enable detailed error messages)
# Set to false in production for security
DEBUG="false"